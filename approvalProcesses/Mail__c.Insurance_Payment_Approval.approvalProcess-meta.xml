        <name>Check_Insured_Value</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>cobaltcaretaker@resourceful-shark-4qr0r8.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>davidl@aol.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Mail__c.Value__c</field>
                <operation>greaterThan</operation>
                <value>1000</value>
            </criteriaItems>
        </entryCriteria>
        <label>Approval over $1000</label>
        <name>Approval_over_1000</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/Modern_Post_Parcel_Email_Template_Insurance</emailTemplate>
