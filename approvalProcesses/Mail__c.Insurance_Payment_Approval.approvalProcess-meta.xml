    <entryCriteria>
        <criteriaItems>
            <field>Mail__c.Lost_or_Missing__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Mail__c.Insurance__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
